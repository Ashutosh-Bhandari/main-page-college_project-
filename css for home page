  /* Media Query for Phones */
  @media only screen and (max-width: 600px) {
    body {
      padding-top: 120px; /* Adjust padding for smaller screens */
    }
  
    nav img {
      width: 80px; /* Decrease the width of the logo for smaller screens */
      margin-right: 20px; /* Adjust margin for smaller screens */
    }
  
    .navigation ul {
      display: none; /* Hide the navigation links by default on smaller screens */
    }
  
    .navigation h1 {
      text-align: center; /* Center the heading */
    }
  
    .search-bar {
      width: 90%; /* Adjust width for smaller screens */
      height: 40px; /* Decrease height for smaller screens */
      margin-bottom: 1rem; /* Adjust margin for smaller screens */
    }
  
    .search-bar input[type="text"] {
      font-size: 1.2rem; /* Decrease font size for smaller screens */
    }
  
    .search-bar button {
      padding: 8px; /* Adjust padding for smaller screens */
    }
  
    #subjects {
      padding: 5vw 2vw 0 2vw; /* Adjust padding for smaller screens */
    }
  
    #subjects .sub-base {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Adjust grid for smaller screens */
    }
  
    #subjects .sub-box {
      padding: 1rem; /* Adjust padding for smaller screens */
    }
  }
  
  /* Media Query for Tablets */
  @media only screen and (min-width: 601px) and (max-width: 1024px) {
